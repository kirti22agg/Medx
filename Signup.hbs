<body>
    <div class="container">
        <div class="main">
            <div class="text-center">
                <a href="/">
                    <img src="photos/logo.png" width="120px" class="photo my-3 mx-auto ">
                </a>
            </div>
            <form action="/signup" method="POST">
                <input type="text" placeholder="Name" class="form-control my-3" name="name" minlength="3">
                <input type="text" placeholder="Email" class="form-control my-3" name="email">
                <input type="text" placeholder="Phone Number" class="form-control my-3" name="phone" minlength="10">
                <input type="password" placeholder="Password" class="form-control my-3" name="password" minlength="7">
                <input type="password" placeholder=" Confirm Password" class="form-control my-3" name="cpassword"
                    min="7">
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <a href="/login" class="my-3">Already have an account?</a>
        </div>
    </div>
</body>

