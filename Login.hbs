    <link href="css/index.css" rel="stylesheet">

</head>

<body>

    <div class="container ">
        <h3 class="text-center heading">{{Text}}</h3>
        <div class="main">
            <div class="text-center">
                <a href="/">
                    <img src="photos/logo.png" width="120px" class="photo my-3 mx-auto">
                </a>
            </div>
            <form action="/login" method="POST">
                <input type="text" placeholder="Email" class="form-control my-3" name="email">
                <input type="password" placeholder="Password" class="form-control my-3" name="password">
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <a href="/signup" class="my-4">Signup</a>
        </div>
    </div>
</body>

</html>